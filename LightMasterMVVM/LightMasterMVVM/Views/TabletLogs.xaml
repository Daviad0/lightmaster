<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LightMasterMVVM.Views.TabletLogs">
  <ItemsControl Items="{Binding CurrentLogEntries}">
    <ItemsControl.ItemTemplate>
      <DataTemplate>
        <Grid ColumnDefinitions="90,*">
          <Border Background="{Binding Background}" Grid.Column="0" Padding="5" CornerRadius="4">
            <TextBlock Text="{Binding TimeFormatted}" Foreground="White" FontWeight="Bold"/>
          </Border>
          <Border BorderBrush="{Binding Background}" BorderThickness="0,0,0,2">
            <TextBlock Text="{Binding Description}" Grid.Column="1"/>
          </Border>
          
        </Grid>
      </DataTemplate>
    </ItemsControl.ItemTemplate>
  </ItemsControl>
</UserControl>
