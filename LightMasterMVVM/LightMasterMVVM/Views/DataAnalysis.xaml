<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LightMasterMVVM.Views.DataAnalysis">
  <StackPanel>
    <TextBlock Text="Graph Below :)"/>
    <ScrollViewer Height="600">
      <oxy:PlotView Controller="{Binding customController}" IsMouseWheelEnabled="False" Model="{Binding DataPoints}" Height="{Binding GraphHeight}" Width="900"></oxy:PlotView>
    </ScrollViewer>

  </StackPanel>
</UserControl>
